extends layout

block head
   script(src="/javascripts/angular.js")
   script(src="/javascripts/validation.js")

block content
   #title-banner
      h1= title
      p= desc
   .container
      div(id="login", class="col-sm-6 col-sm-offset-3")
         h2(id="login-icon")
            span(id="login-icon-span" class="fa fa-sign-in")
            | Login

         if message.length > 0
            div(class="alert alert-danger")= message

         form(id="login-form", action="/login", method="post")
            #emailGroup.form-group
               label Email
               input#formEmail.form-control(type="text", name="email", placeholder="Email")
               p(class = "help-block", id="emailValidate", style="display:none;") Please enter a valid email.
            #passwordGroup.form-group
               label Password
               input#formPassword.form-control(type="password", name="password", placeholder="Password")
               p(class = "help-block", id="passwordValidate", style="display:none;") Please enter a valid password.
            button(class="btn btn-success btn-lg", type="submit", id="submitButton") Login
         hr
         p
            | Need an account? 
            a(href="/signup") Signup
         p
            | Or go 
            a(href="/") home
            | .

block scripts
   script(src="/javascripts/loginValidation.js")